{# templates/admin/login.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Admin Login{% endblock %}

{% block body %}
    <h1>Admin Login</h1>

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('admin_login') }}" method="post">
        <label for="username">Username:</label>
        <input type="text" id="username" name="_username" value="{{ last_username }}" required autofocus>

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" required>

        <input type="hidden" name="_target_path" value="{{ path('user_index') }}">

        <button type="submit">Login</button>
    </form>
{% endblock %}
