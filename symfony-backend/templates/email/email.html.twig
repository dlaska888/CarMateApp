{% extends 'base.html.twig' %}

{% block title %}Email Confirmation{% endblock %}

{% block styles %}
    <style>
        body {
            font-family: Arial, sans-serif;
            color: #333;
            background-color: #f7f7f7;
            padding: 20px;
        }
        .container {
            background-color: #fff;
            border-radius: 5px;
            padding: 20px;
            margin: 0 auto;
            max-width: 600px;
        }
        h1 {
            color: #444;
        }
        p {
            font-size: 16px;
            line-height: 1.5;
        }
        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            padding: 15px 32px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            cursor: pointer;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container">
        <h1>Welcome to our website, {{ name }}!</h1>
        <p>Please click the button below to confirm your email address and complete your registration.</p>
        <a href="{{ confirmationLink }}" class="button">Confirm Email</a>
    </div>
{% endblock %}